<style>
  .hero-background {
    background: linear-gradient(
        217deg,
        rgba(15, 0, 0, 0.8),
        rgba(255, 0, 0, 0) 70.71%
      ),
      linear-gradient(127deg, rgba(0, 7, 0, 0.8), rgba(0, 0, 0, 0) 70.71%),
      linear-gradient(336deg, rgba(2, 2, 36, 0.8), rgba(0, 0, 255, 0) 70.71%);
    background-color: #000;
    position: relative;
    overflow: hidden;
  }

  .hero-background::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    right: -50%;
    bottom: -50%;
    background: radial-gradient(
        circle,
        rgba(255, 255, 255, 0.1) 0%,
        rgba(255, 255, 255, 0) 60%
      ),
      radial-gradient(
        circle at 20% 80%,
        rgba(2, 53, 53, 0.2) 0%,
        rgba(0, 255, 255, 0) 40%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(12, 0, 12, 0.2) 0%,
        rgba(255, 0, 255, 0) 40%
      );
    transform: rotate(0deg);
    animation: rotateBackground 20s linear infinite;
  }

  @keyframes rotateBackground {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .hero-background::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0) 100%
    );
  }
</style>
